<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--执行的sql语句-->
<mapper namespace="com.test">
    <select id="login" resultType="Integer">
        select count(*) from oauth_user
        where rawId=#{rawId}
        and email=#{email};
    </select>

    <select id="getUserInfo" parameterType="Integer" resultType="com.test.model.User">
        select * from users where id=#{id};
    </select>


    <insert id="addUser" parameterType="com.test.model.User">
        insert into users(username,password,age,sex,idDelete)
        values(#{username},#{password},#{age},#{sex},0);
    </insert>


    <sql id="createTable">
        CREATE TABLE Persons
        (
        P_Id int NOT NULL,
        LastName varchar(255) NOT NULL,
        FirstName varchar(255),
        Address varchar(255),
        City varchar(255),
        CONSTRAINT pk_PersonID PRIMARY KEY (P_Id,LastName)
        )
    </sql>

    <select id="getUserList" resultType="com.test.model.User">
        select * from user;
    </select>

    <update id="updateUser" parameterType="com.test.model.User">
        update user set name=#{name},age=#{age}
        where id=#{id};
    </update>

    <delete id="deleteUser" parameterType="Integer">
        delete from user where id=#{id};
    </delete>


</mapper>